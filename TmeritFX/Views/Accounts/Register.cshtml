                    <label class="control-label">Repeat Password</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-key"></i></span>
                        <input id="password_confirm" type="password" class="form-control" required placeholder="Re-type Password">
                    </div>
                    <p class="text-danger" id="confirm_passwordValidation" style="display: none;">Password Not Matched</p>
