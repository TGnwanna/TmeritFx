									<li><a asp-controller="Accounts" asp-action="ChangePassword">Change Password</a></li>
									<li><a asp-controller="Accounts" asp-action="LogOut">Logout</a></li>
								</ul>
							</li>
						</ul>
					</div>
                </div>
            </div>
			<!-- /Sidebar -->
			
			<!-- Page Wrapper -->
            <div class="page-wrapper">
			
				<!-- Page Content -->
                <div class="content container-fluid">
					<main role="main">
						@RenderBody()
					</main>			
				</div>
				<!-- /Page Content -->
            </div>
			<!-- /Page Wrapper -->
        </div>
