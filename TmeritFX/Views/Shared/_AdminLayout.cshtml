					<div class="dropdown-menu dropdown-menu-right">
						<a class="dropdown-item" href="#">Make Sales</a>
						<a class="dropdown-item" href="#">Sales Return</a>
					</div>
				</div>
				<!-- /Mobile Menu -->
				
            </div>
			<!-- /Header -->
			
			<!-- Sidebar -->
            <div class="sidebar" id="sidebar">
                <div class="sidebar-inner slimscroll">
					<div id="sidebar-menu" class="sidebar-menu">
						<ul>
                            <li><a asp-action="Dashboard" asp-controller="Admin"><i class="la la-home"></i> <span>Dashboard</span></a></li>
							<li class="submenu">
								<a href="#"><i class="la la-wallet"></i> <span>Investments</span> <span class="menu-arrow"></span></a>
								<ul style="display: none;">
									<li><a asp-action="Plans" asp-controller="Investor">Referral</a></li>
									<li><a asp-action="History" asp-controller="Investor">Investment Hisory</a></li>
								</ul>
							</li>	
							<li> <a asp-action="Withdrawal" asp-controller="Investor"><i class="fa fa-exchange"></i> <span>Withdrawl</span></a></li>
							<li><a asp-action="Referrals" asp-controller="Investor"><i class="la la-group"></i> <span>Referrals</span></a></li>
							<li><a href="#"><i class="la la-support"></i> <span>Support</span></a></li>
							<li class="submenu">
